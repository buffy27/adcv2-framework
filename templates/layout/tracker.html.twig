{% import'macros/filesystem.html.twig' as filesystem %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
               and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('css/adc.css') }}">
            <link rel="stylesheet" href="{{ asset('css/adc.modal.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.min.css') }}">
            <link rel="shortcut icon" type="image/jpg" href="{{ asset('images/favicon.ico') }}"/>
        {% endblock %}
    </head>
    <body>
        <div id="loading-overlay" class="fade-overlay d-none">
            <div>
                <div class="lds-ellipsis">
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
        </div>
        <div class="logo">
            <div class="logo-text">

                <img src="{{ asset('images/trans.gif') }}" class="main-arrowup valign-bottom" />
                <span> {{ trackerCache.getPeer.seeders ~ " / " ~ filesystem.bytesToSize(trackerCache.userStats.uploaded)}}  </span>
                <img src="{{ asset('images/trans.gif') }}" class="main-arrowdown valign-bottom" />
                <span> {{ trackerCache.getPeer.leechers ~ " / " ~ filesystem.bytesToSize(trackerCache.userStats.downloaded)}} </span>
                &nbsp;<span>Ratio: </span>
                <span></span>
                &nbsp;<a class="no-decoration" href="{{ path('messages') }}">
                    {% if trackerCache.inboxMessages.new == 0 %}
                     <img src="{{ asset('images/trans.gif') }}" class="valign-bottom main-inbox" />
                    {% else %}
                     <img src="{{ asset('images/trans.gif') }}" class="valign-bottom main-inboxnew" />
                    {% endif %}
                </a>
                <span>{{ trackerCache.inboxMessages.inbox }} ({{ trackerCache.inboxMessages.new }} New)</span>
                &nbsp;<span> </span>
            </div>
        </div>

        <div class="outer mx-0 mx-lg-2 bx-d-lg-0">
            <div class="navigation d-flex justify-content-center flex-wrap">
                <a href="{{ path('index.index') }}">Home</a>
                <a href="{{ path('torrents') }}">Browse</a>
                <a href="/requests">Requests</a>
                <a href="{{ path('upload') }}">Upload</a>
                <a href="{{ path('bookmarks') }}">Bookmarks</a>
                <a href="/forums">Forums</a>
                <a href="{{ path('faq') }}">FAQ</a>
                <a href="{{ path('rules') }}">Rules</a>
                <a href="{{ path('donation') }}">Donation</a>
                <div class="menu-right d-none d-lg-block">
                    <a href="{{ path('user.profile') }}"><img title="Your Profile" height="20" width="20" src="{{ asset('images/nav_bar/profile1.svg') }}" /></a>
                    <a href="{{ path('friends') }}"><img title="Friends" height="20" width="20" src="{{ asset('images/nav_bar/friends.svg') }}"/></a>
                    <a href="/staffpm"><img title="PM Staff" height="20" width="20" src="{{ asset('images/nav_bar/staff.svg') }}"/></a>
                    <a href="{{ path('rss') }}"><img title="RSS" height="20" width="20" src="{{ asset('images/nav_bar/rss.svg') }}"/></a>
                    <a href="irc://irc.rizon.net/asiandvdclub"><img title="IRC" height="20" width="20" src="{{  asset('images/nav_bar/irc.svg') }}" /></a>
                    <a href="/logout"><img title="Logout" height="20" width="20" src="{{ asset('images/nav_bar/logout.svg') }}"/></a>
                </div>
            </div>

            <div class="container px-d-sm-0">
                {% block body %}
                {% endblock %}
            </div>
        </div>
        <div class="footer">
            <p>Asian DVD Club | 2005-<script>document.write(new Date().getFullYear())</script></p>
        </div>
    </body>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}

        <script type="text/javascript">
            function display_c(){
                var refresh=1000;
                mytime=setTimeout('display_ct()',refresh)
            }
            function display_ct() {
                var x = new Date()
                var x1=x.toUTCString();
                document.getElementById('ct').innerHTML = x1;
                tt=display_c();
            }
        </script>
    {% endblock %}
    <div class="footer">
        <p></p>
        <body onload=display_ct();>
        <span id='ct' ></span></body>
    </div>

</html>
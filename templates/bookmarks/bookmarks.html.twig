{% extends 'layout/tracker.html.twig' %}
{% import'macros/filesystem.html.twig' as filesystem %}

{% block title %}Friends{% endblock %}

{% block body %}
    <div class="row small-device mt-4 mb-5">
        <div class="col-xl-10 mx-auto col-12">
            <h1 class="text-center">My Bookmarks</h1>

            <div class="torrenttable table-responsive">
                <table class="torrenttable_helper bx-d-sm-0 w-100" cellspacing="0" cellpadding="10">
                    <thead>
                    <tr>
                        <th width="1%" class="text-left">Type</th>
                        <th class="text-left">Name</th>
                        <th class="text-right d-none d-sm-table-cell">Uploader</th>
                        <th width="1%" class="text-center d-none d-sm-table-cell">Size</th>
                        <th width="1%" class="text-center d-none d-md-table-cell">Up</th>
                        <th width="1%" class="text-center d-none d-md-table-cell">Dn</th>
                        <th width="1%" class="text-right d-none d-lg-table-cell">Age</th>
                        <th width="1%" class="text-center d-none d-lg-table-cell">DLs</th>
                        <th width="1%" class="text-center d-none d-lg-table-cell"><img src="../images/trans.gif" class="main-comments" /></th>
                        <th width="1%" class="text-center">Del</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if bookmarks is empty %}
                        <tr>
                            <td colspan="10" class="text-center">You don't have any bookmarks...</td>
                        </tr>
                    {% else %}
                        {% for bookmark in bookmarks %}
                        <tr>
                            <td>{{ bookmark.torrent.getTCategory.getName }}</td>
                            <td><a class="no-decoration" href="{{ path('torrent', {id:bookmark.torrent.id}) }}">{{ bookmark.torrent.name }}</b></a></td>
                            <td class="text-right d-none d-sm-table-cell"><a href="{{ bookmark.torrent.owner.id }}">{{ bookmark.torrent.owner.username }}</a></td>
                            <td width="7%" class="text-center d-none d-sm-table-cell">{{ filesystem.bytesToSize(bookmark.torrent.size) }}</td>
                            <td class="text-center d-none d-md-table-cell">{{ bookmark.torrent.seeders }}</td>
                            <td class="text-center d-none d-md-table-cell">{{ bookmark.torrent.leechers }}</td>
                            <td width="7%" class="text-right d-none d-lg-table-cell dark-gray">{{ functions.timeago_short(bookmark.torrent.added) }}</td>
                            <td class="text-center d-none d-lg-table-cell"></td>
                            <td class="text-center d-none d-lg-table-cell"></td>
                            <td class="text-center"><input type="checkbox" name="check[]" value="<?php echo $bookmark['id']; ?>"></td>
                        </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <div class="mt-3 mx-2 mx-sm-0">
                <input type="submit" name="submit" value="Delete" class="btn btn-primary mg">
            </div>
        </div>
    </div>
{% endblock %}